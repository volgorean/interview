<div class="container-fluid">
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <h1 class="bg-primary text-center p25">
        Distances from DC
      </h1>
      
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Lat</th>
            <th scope="col">Lng</th>
            <th scope="col">Address</th>
            <th scope="col">Miles Away</th>
          </tr>
        </thead>
        <tbody>
          <% @results.each_with_index do |r, i| %>
            <tr>
              <th scope="row"><%= i+1 %></th>
              <td><%= r.from.lat %></td>
              <td><%= r.from.lng %></td>
              <td><%= r.from.full_address %></td>
              <td><%= r.dist.round(2) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
